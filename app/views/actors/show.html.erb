<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><img src ="<%= @actor.image_url %>"></dd>

      <dt>Character Count</dt>
      <dd><%= @actor.characters.count %></dd>

      <dt>Filmography</dt>
      <dd>
        <% @actor.characters.each do |character| %>
          <li><a href="/movies/<%= character.movie.id %>"><%= character.movie.title %></a> (<%= character.name %>)</li>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div class="page-header">
  <h3>Add a new Character</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form <form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Input for hidden actor id -->
      <input type="hidden" name="actor_id" value="<%= @actor.id %>">

      <div class="form-group">
        <label for="movie_id" class="control-label">
          Movie
        </label>

        <%= select_tag(:movie_id, options_from_collection_for_select(Movie.all, :id, :title), :class=>"form-control") %>
        
        <a href="/movies/new">or add a new movie</a>

      </div>

      <!-- Label and input for character name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Character name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control">
      </div>

      <button class="btn btn-success">
        Create Character
      </button>
      or
      <a href="/characters">Cancel</a>
    </form>
  </div>
</div>